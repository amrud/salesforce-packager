<UserControl x:Class="SalesforcePackager.ToolUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SalesforcePackager"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer>
        <Grid>
            <StackPanel MaxWidth="500">
                <Label Content="Profile cleaner" FontSize="13"/>
                <TextBox Text="This tool will remove the &lt;userpermission&gt; section from the .profile files" FontSize="11" Height="auto" TextWrapping="Wrap" IsEnabled="False"  BorderBrush="White"/>
                <Button x:Name="btnListProfiles" Content="Launch" Click="btnListProfiles_Click" VerticalAlignment="Top" Margin="0,5,0,0" Width="70" Style="{StaticResource AccentedSquareButtonStyle}"  BorderThickness="0"/>
            </StackPanel>
            
        </Grid>
    </ScrollViewer>
    
</UserControl>
